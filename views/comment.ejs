<article class="comment">
  <div class="comment-user logo">
    <i class="fas fa-user" style="font-size: 40px;"></i>
  </div>
  <div class="comment-user info">
    <h3><%= username %></h3>
    <div class="likes">
      <h4><%= likes %> </h4>
      <i class="fas fa-thumbs-up"></i>
    </div>
  </div>
    <h4 class="comment-user content">
      <%= content %> 
    </h4>
  <div class="comment-user options">
    <div class="options-button">
      <button>
        <i class="far fa-thumbs-up"></i>
        <h4>J'aime</h4>
      </button>
      <button>
        <i class="far fa-flag"></i>
        <h4>Signaler</h4>
      </button>
    </div>
    <div class="report-panel">
      <h4>Raisons :</h4>
      <select name="report-reasons" id="report-select-box">
        <option value="default">Choississez une raison</option>
        <option value="spam">Spam</option>
        <option value="innapproriate">Propos innappropriés ou dangeureux</option>
        <option value="others">Autres (Préciser par message)</option>
      </select>
      <input type="text" placeholder="Facultatif">
      <div class="send-button">
        <i class="fas fa-paper-plane"></i>
      </div>
    </div>
  </div>
</article>
